             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListProject.Views.AddCategory">

    <VerticalStackLayout>
        <Label Text="Dodawanie kategorii"
           FontSize="24"
           HorizontalOptions="Center"
           Margin="0,10,10,10"/>
    
        <Entry Placeholder="Nazwa sklepu"
           x:Name="CategoryName"
           MaximumWidthRequest="500"
           BackgroundColor="White"
           Margin="20,0,20,10"/>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="PowrÃ³t"
                Clicked="OnGoToMenuClicked"
                Padding="20,10,20,10"
                Margin="10,0,10,0"/>
            <Button Text="Dodaj"
                Clicked="OnAddCategoryClicked"
                Padding="20,10,20,10"
                Margin="10,0,10,0"/>

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentView>
